<%- include('./partials/header') %>
<%- include('./partials/navbar') %>
<div class="container mt-3">
    <%- include('./partials/flash') %>
    <h1>Quick View</h1>
    <div class="row d-flex mb-3 px-1">
        <h3 class="text-body-secondary mb-3 px-2">Expense Snapshot</h3>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>YTD</b></h6>
            <p class="lead">Rs.<%= details.year %></p>
        </div>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>MTD</b></h6>
            <p class="lead">Rs.<%= details.month %></p>
        </div>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Yesterday</b></h6>
            <p class="lead">Rs.<%= details.yesterday %></p>
        </div>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Today</b></h6>
            <p class="lead">Rs.<%= details.today %></p>
        </div>
        
    </div>

    <div class="row d-flex mb-3">
        <h3 class="text-body-secondary mb-3 px-2">Mode wise snapshot</h3>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Credit</b></h6>
            <p class="lead">Rs.<%= details.credit %></p>
        </div>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Account</b></h6>
            <p class="lead">Rs.<%= details.account %></p>
        </div>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Cash</b></h6>
            <p class="lead">Rs.<%= details.cash %></p>
        </div>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Wallet</b></h6>
            <p class="lead">Rs.<%= details.wallet %></p>
        </div>
    </div>

    <div class="row d-flex mb-3">
        <h3 class="text-body-secondary mb-3 px-2">Quick Analysis</h3>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Yearly Average</b></h6>
        </div>

        <div class="col col-lg-2 col-md-4 col-sm-6 px-3 dashboard_box">
            <h6 class="text-body-primary"><b>Monthly Average</b></h6>
        </div>
    </div>
    
</div>
<%- include('./partials/footer') %>

