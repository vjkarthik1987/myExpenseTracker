<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<div class="container">
    <div class="col col-lg-4 col-md-6 col-sm-10 mx-auto mt-5 formHolder">
        <h2>Add an Expense</h2>
        <form action="/expenses/<%= expense._id %>/update?_method=PATCH" method="POST" novalidate class="needs-validation">
            <input type="text" id="item" name="item"  required value="<%= expense.item %>" class="form-control">
            <input type="number" id="price" name="price"  required value="<%= expense.price %>" class="form-control">
            <input type="date" id="date" name="date" required value="<%= expense.date %>" class="form-control">
            <div class="col selectFields d-flex flex-row justify-content-between">
                <select id="category" name="category">
                    <% for (let category of categories) { %>
                        <% let result = (expense.category === category) ? 'selected' : '' %>
                        <option value="<%= category %>" <%= result %>><%= category %></option>
                    <% } %>
                </select>
                <select id="mode" name="mode">
                    <% for (let mode of modes) { %>
                        <% let result = (expense.mode === mode) ? 'selected' : '' %>
                        <option value="<%= mode %>" <%= result %>><%= mode %></option>
                    <% } %>
                </select>
            </div>
            <input type="text" id="shop" name="shop" required placeholder="Enter your shop" value="<%= expense.shop %>" class="form-control">
            <input type="text" id="note" name="note" required placeholder="Enter notes" value="<%= expense.note %>" class="form-control">
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>